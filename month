import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner gg = new Scanner(System.in);



        System.out.print("Введите номер месяца: ");
        int month = gg.nextInt();
        System.out.print("Введите год: ");
        int year = gg
                .nextInt();
        int daysInMonth;
        switch (month) {
            case 1:
            case 3:
            case 5:
            case 7:
            case 8:
            case 10:
            case 12:
                daysInMonth = 31;
                break;
            case 4:
            case 6:
            case 9:
            case 11:
                daysInMonth = 30;
                break;
            case 2:
                if ((year % 4 == 0 && year % 100 != 0) || year % 400 == 0) {
                    daysInMonth = 29;
                } else {
                    daysInMonth = 28;
                }
                break;
            default:
                throw new  IllegalArgumentException("Неверный номер месяца");
        }


        System.out.println(daysInMonth);
    }
}



import java.util.Scanner;

public class Main {
    public static String join(String[] tokens, char delimiter) {
        // Проверяем, есть ли элементы в массиве
        if (tokens.length == 0) {
            return ""; // Если массив пустой, возвращаем пустую строку
        }
        
        StringBuilder result = new StringBuilder(tokens[0]); // Начинаем с первого элемента
        
        // Добавляем остальные элементы через разделитель
        for (int i = 1; i < tokens.length; i++) {
            result.append(delimiter).append(tokens[i]);
        }
        
        return result.toString();
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in); // Создаем объект для ввода данных

        System.out.print("Введите строки через пробел: ");
        String input = scanner.nextLine(); // Считываем введенный текст
        String[] words = input.split(" "); // Разбиваем строку на массив слов

        System.out.print("Введите разделитель: ");
        char delimiter = scanner.next().charAt(0); // Считываем первый символ из следующего ввода

        String joinedString = join(words, delimiter);
        System.out.println(joinedString); // Выводим результат
    }
}